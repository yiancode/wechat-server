# 服务端口
PORT=3000

# API 访问凭证（Yi-API 配置的 WeChat Server 访问凭证）
API_TOKEN=your-api-token

# 单公众号模式配置（可选，多公众号请使用 config.yaml）
WECHAT_APPID=wx1234567890
WECHAT_SECRET=your-app-secret
WECHAT_TOKEN=your-wechat-token
WECHAT_NAME=我的公众号

# 验证码配置（可选）
CODE_LENGTH=6
CODE_EXPIRE_MINUTES=5

# 配置文件路径（可选）
CONFIG_PATH=config.yaml
